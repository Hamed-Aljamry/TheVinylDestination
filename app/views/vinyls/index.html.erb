<%= render partial: 'card' %>




<h4>Want to list your own Vinyl?</h4>
<button class="btn-index"><%= link_to 'List Vinyl', new_vinyl_path %></button>




<button class="btn"><%= link_to 'Back to Home', root_path %></button>



<div data-controller="modal">
  <!-- Button to trigger modal -->
  <button data-modal-target="btn">Open Modal</button>

  <!-- Modal -->
  <div data-modal-target="modal" class="modal">
    <div class="modal-content">
      <%= simple_form_for(@vinyl) do |f| %>
        <%= f.label :name %>
        <%= f.text_field :name, class: "form-control" %>
        <%= f.label :description %>
        <%= f.text_field :description, class: "form-control" %>
        <%= f.label :genre %>
        <%= f.text_field :genre, class: "form-control" %>
        <%= f.label :artist %>
        <%= f.text_field :artist, class: "form-control" %>
        <%= f.input :photo, label: "Enter image URL", placeholder: "Google-image-url", class: "form-control" %>
        <%= f.submit "Add Vinyl", class: "btn btn-primary" %>
      <% end %>
    <button data-modal-target="closeBtn">Close</button>
    </div>
  </div>
</div>
