<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-10">
      <div class="card-deck">
        <% @vinyls.each_slice(3) do |vinyls_row| %>
          <div class="row">
            <% vinyls_row.each do |vinyl| %>
              <div class="col-md-4">
                <div class="card">
                  <%= link_to vinyl_path(vinyl) do %>
                    <%= cl_image_tag vinyl.photo.key, height: 300, width: 300, crop: :fill %>
                    <div class="card-body">
                      <h5 class="card-title"><%= vinyl.name %></h5>
                      <p class="card-text" data-controller="see-more">
                        <span data-target="see-more.short"><%= truncate(vinyl.description, length: 20) %></span>
                        <span data-target="see-more.full"><%= vinyl.description %></span>
                        <button type="button" data-action="click->see-more#toggle" data-target="see-more.toggle" class="btn btn-link">See More</button>
                      </p>
                    </div>
                     <div class="play-button">
                      <i class="fas fa-play"></i>
                    </div>
                  <% end %>
                  <% if vinyl.user_id == current_user.id %>
                    <div class="card-footer">
                      <%= button_to "Delete Vinyl", vinyl_path(vinyl), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger btn-sm", onclick: "return confirm('Are you sure?')" %>
                    </div>
                  <% end %>
                </div>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
